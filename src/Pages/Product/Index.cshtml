@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Pawfect - Paws page";
}

<div class="container">
    <div class="card my-5">
        <div class="card-body">
            <table class="table table-bordered table-striped">
        <thead>
            <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Paw in Model.Paws)
            {
            <tr>
                <td>@Paw.Paw.Name</td>
                <td>@Paw.Paw.Breed</td>
                <td>@Paw.Paw.Age</td>
                <td><a asp-page="Read" asp-route-id="@Paw.Id">Read</a></td>
            </tr>
            }
        </tbody>
    </table>
        </div>
    </div>
    
</div>